# University Activities Backend Configuration
# Copy this file to .env and update values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production-make-it-very-long-and-random

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-also-change-this-in-production

# Database Configuration
# SQLite (default - for development)
DATABASE_URI=sqlite:///university_activities.db

# PostgreSQL (for production)
# DATABASE_URI=postgresql://username:password@localhost:5432/university_activities

# MySQL (alternative)
# DATABASE_URI=mysql+pymysql://username:password@localhost:3306/university_activities

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=True

# CORS Configuration
CORS_ORIGINS=*

# Security (Production)
# Enable these in production
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# Email Configuration (for future features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Upload Configuration
# MAX_CONTENT_LENGTH=16777216  # 16MB
# UPLOAD_FOLDER=uploads

# Logging
# LOG_LEVEL=INFO
# LOG_FILE=app.log
